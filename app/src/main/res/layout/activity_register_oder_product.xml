<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    tools:context=".RegisterOderProduct">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/Header_Order_Register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="textStart"
            android:text="Order Confirmation"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/checkindateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/roboto"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="dd/mm/yyyy" />
            <TextView
                android:id="@+id/checkOutdateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/roboto"

                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="dd/mm/yyyy" />
            <Button
                android:id="@+id/checkindate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginRight="20dp"
                android:background="@color/color_palette_1"
                android:textSize="15sp"
                android:text="Check In date"
                android:textColor="#FFEBEE" />
            <Button
                android:id="@+id/checkOutdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/color_palette_1"
                android:textSize="15sp"
                android:text="Chec Out date"
                android:textColor="#FFEBEE" />
        </GridLayout>








        <LinearLayout
            android:id="@+id/Order_Details_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@id/Header_Order_Register"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/UsernameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/roboto"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="Your Name " />
            <TextView
                android:id="@+id/orderRegUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:text="PRITAM MANNA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/black"
                android:orientation="vertical"></LinearLayout>

            <TextView
                android:id="@+id/OderRegEmailText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/roboto"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="Email Address" />
            <TextView
                android:id="@+id/oderRegEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:hint="pritam123@gmail.com"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/black"
                android:orientation="vertical"></LinearLayout>

            <TextView
                android:id="@+id/orderPhoneText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/roboto"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="Phone Number" />
            <TextView
                android:id="@+id/orderRegPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:hint="834687003"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/black"
                android:orientation="vertical"></LinearLayout>

            <TextView
                android:id="@+id/oderRegHotelNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/roboto"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="Hotel Name" />
            <TextView
                android:id="@+id/oderRegHotelName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:text="TOR NAAM HOTEL" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/black"
                android:orientation="vertical"></LinearLayout>

            <TextView
                android:id="@+id/oderReglocationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/roboto"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="Location" />
            <TextView
                android:id="@+id/orderReglocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:hint="Ulubariya Pirtola"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/black"
                android:orientation="vertical">

            </LinearLayout>

            <TextView
                android:id="@+id/orderRegRoomNumberText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/roboto"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="Room Number" />
            <TextView
                android:id="@+id/orderRegRoomNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:hint="WSER1452#"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:background="@color/black"
                android:orientation="vertical"></LinearLayout>



        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_below="@id/Order_Details_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/OrderPriceicon_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/price"
                        android:textSize="21sp"
                        android:text="Rs. /-" />
                    <TextView
                        android:id="@+id/Total_OrderPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/price"
                        android:textSize="20sp"
                        android:text="TextView" />
                </LinearLayout>

                <Button
                    android:id="@+id/Confirm_Booking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/color_palette_1"
                    android:textSize="18sp"
                    android:text="Confirm Booking"
                    android:textColor="#FFEBEE" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
</LinearLayout>