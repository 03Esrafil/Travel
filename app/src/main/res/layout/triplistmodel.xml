<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="5dp"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imagelistid"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:elevation="5dp"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"
                android:background="@drawable/productshadow"
                android:src="@drawable/profile" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_toRightOf="@id/imagelistid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Placename"
                    android:text="Place Name"
                    android:textColor="@color/black"

                    android:textSize="25dp"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@id/imagelistid"
                    />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/orderText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_toRightOf="@id/imagelistid"
                        android:text="Price "
                        android:textStyle="bold"
                        android:textSize="15dp"
                        tools:ignore="TextSizeCheck" />
                    <TextView
                        android:id="@+id/Pricenumbericon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/orderText"
                        android:text="â‚¹ "
                        android:textSize="15dp"
                        android:textColor="@color/price"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:id="@+id/orderNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/imagelistid"
                        android:textColor="@color/price"
                        android:text="E2145W5"
                        android:textSize="15dp"
                        tools:ignore="TextSizeCheck" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/priceText"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/imagelistid"
                        android:text="Order Number"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        tools:ignore="TextSizeCheck" />


                    <TextView
                        android:id="@+id/Oderprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/Pricenumbericon"
                        android:text="Ea2145W5"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        tools:ignore="TextSizeCheck" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>