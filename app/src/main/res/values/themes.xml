<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Test" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

        <item name="colorPrimaryVariant">@color/center_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/center_color</item>
        <item name="android:windowLightNavigationBar">true</item>


    </style>
    <style name="Theme.Test" parent="Base.Theme.Test" />

    <style name="Base.myTheme.Test" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
    <style name="RoundedCorner" parent="ShapeAppearance.Material3.MediumComponent" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>


</resources>